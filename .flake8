[flake8]
# Ignore some errors and warnings
ignore = 
    E121,
    E123,
    E126,
    E127,
    E128,
    E203,
    E225,
    E226,
    E231,
    E241,
    E251,
    E261,
    E265,
    E302,
    E303,
    E305,
    E402,
    E501,
    E741,
    W291,
    W292,
    W293,
    W391,
    W503,
    W504,
    F403,
    B007,
    B950,
    F401,
    F405,
    E722,

# Set the maximum line length
max-line-length = 300

# Exclude directories or files from linting
exclude =
    .git,
    .gitignore,
    __pycache__,
    migrations,
    venv,
    .env,
    apps.py,
    development.py,
    production.py,
    backup_db.py,
    reset.py,
    generic.py,
    demo.py,

# Specify additional files or directories to lint
# include =
#    another_module.py

# Enable specific plugins or extensions
# plugins =
#    flake8-bugbear

# Control the output format
# format = default

# Show source code for each error or warning
# show-source = True

# Show statistics about errors and warnings
# statistics = True

# Enable inline suppressions using comments
# inline-quotes = double

# Set the number of spaces per indentation level
# indent-size = 4

# Enable strict checking of docstring conventions
# docstring-convention = google
